  "license": "Apache-2.0",
  "keywords": [],
  "scripts": {
    "start": "node build",
    "dev": "concurrently -p '{name}' -n 'client,server' -c 'bgMagenta.bold,bgCyan.bold' 'npm run dev:client' 'npm run dev:server'",
    "dev:client": "tsc -p tsconfig.client.json -w",
    "dev:server": "nodemon -e ts -w src/server -x 'tsc -p tsconfig.server.json && npm start'",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "npm run compile:client && npm run compile:server",
    "compile:client": "tsc -p tsconfig.client.json",
    "compile:server": "tsc -p tsconfig.server.json",
    "fix": "gts fix"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/sqlite3": "^3.1.11",
    "concurrently": "^9.1.2",
    "gts": "^6.0.2",
    "nodemon": "^3.1.9",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.0",
    "@fastify/jwt": "^9.1.0",
    "@fastify/one-line-logger": "^2.0.2",
    "@fastify/static": "^8.1.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.2",
    "fastify-plugin": "^5.0.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  }
}
