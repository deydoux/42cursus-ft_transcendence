{
  "name": "ft_transcendence",
  "version": "0.0.0",
  "description": "This project is centered around the design, development, and organization of a full-stack web application.",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "files": [
    "build/src"
  ],
  "license": "Apache-2.0",
  "keywords": [],
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc",
    "start": "node build",
    "dev": "concurrently -p '{name}' -n 'client,server' -c 'bgMagenta.bold,bgCyan.bold' 'npm run dev:client' 'npm run dev:server'",
    "dev:client": "npm run build:client -- -w",
    "dev:server": "nodemon -e ts -w src/server -x 'npm run build:server && npm start'",
    "lint": "gts lint",
    "clean": "gts clean",
    "fix": "gts fix"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/sqlite3": "^3.1.11",
    "concurrently": "^9.1.2",
    "gts": "^6.0.2",
    "nodemon": "^3.1.9",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.0",
    "@fastify/jwt": "^9.1.0",
    "@fastify/one-line-logger": "^2.0.2",
    "@fastify/static": "^8.1.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.2",
    "fastify-plugin": "^5.0.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "vite": "^6.2.6"
  }
}
